---
import Layout from "../layouts/Layout.astro";
import Skills from "../components/Skills.astro";
import Profile from "../components/Profile.astro";
import Experience from "../components/Experience.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="bento-container">
      <div class="okazu profile">
        <Profile />
      </div>
      <div class="okazu skills">
        <Skills />
      </div>
      <div class="okazu experience">
        <Experience />
      </div>
      <div class="okazu resume">resume</div>
      <div class="okazu medias">medias</div>
      <div class="okazu mind">mind</div>
      <div class="okazu projects">projects</div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }

  .bento-container {
    display: grid;
    grid-template-columns: repeat(5, minmax(0, 1fr));
    grid-template-rows: repeat(12, minmax(0, 1fr));
    gap: 12px;

    @media (width < 915px) {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      grid-template-rows: repeat(20, minmax(0, 1fr));
    }
  }
  .okazu {
    border-radius: 8px;
    padding: 12px;
    border: 4px solid var(--border);
  }

  .profile {
    container-type: inline-size;
    container-name: profile;
    grid-column: span 3;
    grid-row: span 4;

    @media (width < 915px) {
      grid-column: span 3;
      grid-row: span 3;
    }
  }

  .skills {
    container-type: inline-size;
    container-name: skills;
    grid-column: span 2;
    grid-row: span 7;

    @media (width < 915px) {
      grid-column: span 3;
      grid-row: span 4;
    }
  }

  .experience {
    grid-column: span 1;
    grid-row: span 8;
  }

  .resume {
    grid-column: span 1;
    grid-row: span 3;
  }

  .medias {
    grid-column: span 1;
    grid-row: span 3;
  }

  .mind {
    grid-column: span 1;
    grid-row: span 5;
  }

  .projects {
    grid-column: span 3;
    grid-row: span 5;
  }
</style>
